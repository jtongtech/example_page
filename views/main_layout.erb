<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
<link rel="stylesheet" href="/css/layout_style.css">
<head>
   <meta charset="utf-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
   <title><%=title%></title>
   <meta name="viewport" content="width=device-width; initial-scale=1.0">
</head>
<div class="top_nav">
   <%=title%>
   <ul class="nav">
      <% nav_btns.each do |btn|%>
      <% if btn.class == Array %>
      <li class="button-dropdown">
         <a href="javascript:void(0)" class="dropdown-toggle noDecoration">
         <%= btn[0] %> <i class="fas fa-angle-down arrow"></i>
         </a>
         <ul class="dropdown-menu">
            <li>
               <a href="#"><%= btn[1] %></a>
            </li>
            <li>
               <a href="#"><%= btn[2] %></a>
            </li>
         </ul>
      </li>
      <% else %>
      <li class="noDecoration">
         <a href="#" class="noDecoration"><%= btn %></a>
      </li>
      <% end %>
      <% end %>
   </ul>
   <hr>
</div>

<%=yield%>
<footer>
   <div class="footerText">
      &copy; <%= current_year %> <%= companyName %>. All Rights Reserved.
   </div>
</footer>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script src="/js/nav.js"></script>